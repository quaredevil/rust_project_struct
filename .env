# Application
APP_NAME=project-struct-base
APP_PORT=8080
RUST_LOG=info

# Database
DATABASE_URL=postgres://postgres:postgres@localhost:5432/your_database
DATABASE_MAX_CONNECTIONS=10
DATABASE_MAX_CONNECT_ATTEMPTS=5
DATABASE_CONNECT_RETRY_DELAY_MS=2000

# Redis (optional - if using caching)
# REDIS_URL=redis://localhost:6379

# Kafka
KAFKA_BROKERS=localhost:9092
SCHEMA_REGISTRY_URL=http://localhost:8081

# Kafka Topics (customize with your topic names)
KAFKA_TOPIC_EVENTS=your-app-events
KAFKA_TOPIC_COMMANDS=your-app-commands

# Kafka Producer Settings
KAFKA_PUBLISH_QUEUE_CAPACITY=10000
KAFKA_MAX_RETRY_ATTEMPTS=5
KAFKA_RETRY_BACKOFF_MS=1000

# Application-specific settings (add your own)
# APP_FEATURE_FLAG=true
# APP_BATCH_SIZE=100
